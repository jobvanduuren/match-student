<div class="container student-container">

  <div class="row">
    <div class="col-md-5">
      <div class="row">
        <div class="col-md-3">
          <h1 class="student-header">Students</h1>
        </div>
      </div>

      <% @students.each do |student| %>
        <% if student.name != "Dummy"%>

          <div class="row">
            <div class="student-con">
              <div class="col-md-4 student-center">
                <%= link_to student.name, student_path(student.id) %>
              </div>
              <div class="col-md-1">
                <%= link_to raw("<span class=\"glyphicon glyphicon-trash\"></span>"), student_path(student.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-6">

      <h1>Add a student</h1>
        <%= form_for @student do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.submit "Create", class: "btn btn-default" %>
      <% end %>

      <% flash.each do |key, value| %>
          <div ><%= value %></div>
      <% end %>

    </div>
  </div>
</div>
