<h1>students</h1>

<% @students.each do |student| %>
    <% if student.name != "Dummy"%>
    <p><%= link_to student.name, student_path(student.id) %></p>
    <% end %>
<% end %>

<%= @student_count %>

<h1>Add a Student</h1>

<%= form_for @student do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit "Create" %>
<% end %>
